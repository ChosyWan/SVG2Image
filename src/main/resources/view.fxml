<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane fx:id="gridPane" alignment="center" hgap="10" prefHeight="300.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints />
   </rowConstraints>
   <children>
      <HBox GridPane.rowIndex="4">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" text="Create Image" />
            <ImageView fx:id="okLogo" fitHeight="15.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="10.0" top="5.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
      <HBox GridPane.rowIndex="2">
         <children>
            <CheckBox fx:id="bgColor" mnemonicParsing="false" onAction="#checkBG" text="BG-Color">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
            <ColorPicker fx:id="colorPicker" promptText="Pick a Color" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="selectFile" mnemonicParsing="false" onAction="#showFileChooser" text="Select File">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Text fx:id="filename" fill="#4a849e" strokeType="OUTSIDE" strokeWidth="0.0" text="Filename">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
      <ComboBox fx:id="imageType" prefWidth="150.0" promptText="Select Image Type" GridPane.rowIndex="1" />
      <ImageView fx:id="imagePreview" fitHeight="50.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="3" />
   </children>
</GridPane>
